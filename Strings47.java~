public class Strings47 {
	public static void main() {
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter name: ");	
		String name = sc.nextLine();
		name = name.trim();
		boolean isNewWord = true;
		for (int i = 0; i < name.length(); i++) {
			char ch = name.charAt(i);
			if (ch == ' ') newName = true;
			else if (newName) {
				System.out.print(ch + " ");
				newName = false;
			}
		}
	}
}
